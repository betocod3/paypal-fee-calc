---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import CalculatorReceive from "../components/CalculatorReceive.astro";
import CalculatorSend from "../components/CalculatorSend.astro";
---

<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width"/>
    <link rel="preconnect" href="https://fonts.bunny.net">
    <link href="https://fonts.bunny.net/css?family=poppins:400,700" rel="stylesheet" />
    <link rel="icon" href="/ppfee-favicon.avif" type="image/x-icon">
    <script defer src="https://cdn.jsdelivr.net/npm/@alpinejs/mask@3.x.x/dist/cdn.min.js"></script>
    <title>Calculadora de Comisiones Paypal</title>
</head>
<body class="lg:h-screen font-poppins bg-gray-950 flex flex-col justify-between">
<Header/>

<main class="contenedor">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 lg:gap-24 py-10 lg:py-0">
        <CalculatorReceive/>
        <CalculatorSend/>
    </div>
</main>

<Footer/>
</body>
</html>

<style>
    .contenedor {
        margin: 0 auto;
        width: 1200px;
        max-width: 90%;
    }
</style>
